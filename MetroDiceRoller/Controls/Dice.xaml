<UserControl
    x:Class="MetroDiceRoller.Dice"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MetroDiceRoller"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" Width="70" Height="70">
    
    <Grid Background="{Binding Brush}">
        <Grid.RenderTransform>
            <ScaleTransform ScaleX="{Binding SizeRatio}" ScaleY="{Binding SizeRatio}" />
        </Grid.RenderTransform>
    	<TextBlock Margin="0,5,0,0" TextWrapping="Wrap" Text="{Binding Number}" VerticalAlignment="Center" FontSize="56" TextAlignment="Center"/>
    </Grid>
</UserControl>
